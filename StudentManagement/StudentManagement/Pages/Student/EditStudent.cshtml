@page
@model StudentManagement.Pages.Student.EditStudentModel
@{
    ViewData["Title"] = "Edit Student";
}

<h3> @ViewData["Title"] </h3>
<hr/>
<div class="row shadow">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Student.StudentsID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.StudentsName" class="control-label"></label>
                <input asp-for="Student.StudentsName" class="form-control" />
                <span asp-validation-for="Student.StudentsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudentsPhone" class="control-label"></label>
                <input asp-for="Student.StudentsPhone" class="form-control" />
                <span asp-validation-for="Student.StudentsPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudentsEmail" class="control-label"></label>
                <input asp-for="Student.StudentsEmail" class="form-control" />
                <span asp-validation-for="Student.StudentsEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudentsAddress" class="control-label"></label>
                <input asp-for="Student.StudentsAddress" class="form-control" />
                <span asp-validation-for="Student.StudentsAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}