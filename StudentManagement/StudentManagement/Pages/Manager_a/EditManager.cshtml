@page
@model StudentManagement.Pages.Manager_a.EditManagerModel
@{
    ViewData["Title"] = "Edit";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row shadow">
    <div class="col-md-4">

        <form method="post">
            <input type="hidden" asp-for="Managers.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Managers.Name" class="control-label"></label>
                <input asp-for="Managers.Name" class="form-control" />
                <span asp-validation-for="Managers.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Managers.Email" class="control-label"></label>
                <input asp-for="Managers.Email" class="form-control" />
                <span asp-validation-for="Managers.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Managers.Address" class="control-label"></label>
                <input asp-for="Managers.Address" class="form-control" />
                <span asp-validation-for="Managers.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Managers.Username" class="control-label"></label>
                <input asp-for="Managers.Username" class="form-control" />
                <span asp-validation-for="Managers.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Managers.Password" class="control-label"></label>
                <input asp-for="Managers.Password"  class="form-control" />
                <span asp-validation-for="Managers.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
